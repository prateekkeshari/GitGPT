{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "remoteUser": "nonroot",
    "portsAttributes": {
        "5005": {
            "label": "flask",
            "onAutoForward": "openBrowser"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "github.copilot"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },

    "forwardPorts": [
        5005
    ]
}